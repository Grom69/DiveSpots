{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="container my-5 pt-5 pb-5 col-md-10 col-lg-6 m-auto div-back-login rounded text-white">
		<h1 class="text-center display-5">Cr√©er un compte</h1>
		<div class="w-50 m-auto mt-4 text-white">
			{{ form_start(form) }}
			{{ form_row(form.lastName) }}
			{{ form_row(form.firstName) }}
			{{ form_row(form.email) }}
			{{ form_row(form.plainPassword, {
            label: 'Mot de passe'
        }) }}
			{{ form_row(form.agreeTerms) }}
			<div class="d-flex justify-content-center">
				<button type="submit" class="btn btn-info">Valider</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
