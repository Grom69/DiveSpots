{% extends 'baseAdmin.html.twig' %}

{% block title %}Dive
{% endblock %}

{% block body %}
	<div class="container mt-3 rounded div-back-admin text-white">
		<h1>Dive</h1>

		<table class="table text-white">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ dive.id }}</td>
				</tr>
				<tr>
					<th>Pays</th>
					<td>{{ dive.country }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ dive.city }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td><img src="{{ dive.picture }}" alt="dive photo" class="w-25 rounded"></td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ dive.description }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex  justify-content-around pb-3">
			<a href="{{ path('app_dive_index') }}" class="btn btn-light w-25">Retour Ã  la liste</a>
			<a href="{{ path('app_dive_edit', {'id': dive.id}) }}" class="btn btn-light w-25">Editer</a>

			<form method="post" class="d-flex w-25" action="{{ path('app_dive_delete', {'id': dive.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dive.id) }}">
				<button class="btn btn-light w-100">Supprimer</button>
			</form>
		</div>
	</div>

{% endblock %}
