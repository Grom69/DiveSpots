	<div class="card-body text-white text-center">
		<h5 class="card-title text-center ">{{dive.city}}
		</h5>
		{% if is_granted('ROLE_USER') %}
			<i class="bi text-white {{ app.user.isInBookmarks(dive) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
		{% endif %}
		<p class="card-text text-center">{{dive.country}}</p>
